{
    "manifest_version": 3,
    "name": "Gemini Side Panel Assistant",
    "version": "1.1",
    "description": "A side panel assistant powered by Google Gemini with in-page translation.",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_title": "Open Gemini Assistant"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/translator.js"
            ],
            "run_at": "document_idle"
        }
    ]
}